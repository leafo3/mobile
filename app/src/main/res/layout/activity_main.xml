<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.leafo3.main.MainActivity">


    <TextView
        android:id="@+id/activity_main_email_text_view"
        android:background="@color/green_darkest"
        android:text="Alberto Rubalcaba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/ProfileNametextView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="25dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/medium_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WelcomeBackTextView"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/activity_main_report_image_view"
                android:background="@android:color/transparent"
                android:src="@drawable/iconos_home_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight=".5"/>

            <ImageButton
                android:id="@+id/activity_main_camera_image_view"
                android:background="@android:color/transparent"
                android:src="@drawable/iconos_home_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/activity_main_instructions_image_view"
                android:background="@android:color/transparent"
                android:layout_marginTop="15dp"
                android:src="@drawable/iconos_home_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:src="@drawable/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
