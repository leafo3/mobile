<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaf_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- IMAGE -->
    <ImageView
        android:id="@+id/leaf_record_item_image_view"
        android:src="@drawable/ic_launcher"
        android:layout_weight=".3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_weight=".5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Name:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/leaf_record_item_leaf_name"
            android:text="This is the leaf name"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Damage class:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/leaf_record_item_leaf_class"
            android:text="Class 3"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>